<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_avata_main"
    android:background="@color/app_main"
    android:paddingLeft="@dimen/dp10"
    android:paddingTop="@dimen/dp10"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:layout_marginTop="25dp"
        android:id="@+id/img_nav_avata"
        android:src="@drawable/ic_avata_leftmenu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_width="0dp"
        android:layout_height="0dp" />
    <ImageView
        android:padding="@dimen/pading_icon"
        android:id="@+id/img_nav_right"
        android:src="@drawable/ic_right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_nav_avata"
        app:layout_constraintBottom_toBottomOf="@+id/img_nav_avata"
        app:layout_constraintWidth_percent="0.1"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_width="0dp"
        android:layout_height="0dp" />
    <TextView
        android:id="@+id/txt_name_nav"
        android:layout_marginLeft="@dimen/pading_icon"
        android:padding="@dimen/dp5"
        android:textSize="@dimen/txt_user"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:text="Your Name"
        app:layout_constraintTop_toTopOf="@+id/img_nav_avata"
        app:layout_constraintBottom_toBottomOf="@+id/img_nav_avata"
        app:layout_constraintStart_toEndOf="@+id/img_nav_avata"
        app:layout_constraintEnd_toStartOf="@+id/img_nav_right"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
</androidx.constraintlayout.widget.ConstraintLayout>
